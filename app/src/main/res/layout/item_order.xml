<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:id="@+id/orderCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="@dimen/_5sdp"
    app:cardUseCompatPadding="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:strokeColor="@color/primary_color"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/orderImage"
            android:padding="@dimen/_5sdp"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/ic_order"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="10dp"
            style="@style/TextViewStyle"
            android:textSize="@dimen/_14sdp"
            android:text="@string/orderNumber"
            android:textColor="@color/black"

            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/orderImage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_order_number_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            style="@style/TextViewStyleLight"
            android:text="asfd"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_order_number"
            app:layout_constraintStart_toEndOf="@id/tv_order_number"
            app:layout_constraintTop_toTopOf="@id/tv_order_number" />

        <TextView
            android:id="@+id/tv_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="16dp"
            android:text="@string/price"
            style="@style/TextViewStyle"
            android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/orderImage"
            app:layout_constraintTop_toBottomOf="@id/tv_order_number"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_order_price_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            style="@style/TextViewStyleLight"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintBottom_toBottomOf="@id/tv_order_price"
            app:layout_constraintStart_toEndOf="@id/tv_order_price"
            app:layout_constraintTop_toTopOf="@id/tv_order_price" />
        <TextView
            android:id="@+id/tv_order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/_15sdp"
           android:layout_marginBottom="@dimen/_15sdp"
            android:text="@string/date"
            style="@style/TextViewStyle"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/orderImage"
            app:layout_constraintTop_toBottomOf="@id/tv_order_price"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_order_date_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            style="@style/TextViewStyleLight"
            android:textSize="@dimen/_14sdp"
            android:text="2024-06-10T07"

            app:layout_constraintBottom_toBottomOf="@id/tv_order_date"
            app:layout_constraintStart_toEndOf="@id/tv_order_date"
            app:layout_constraintTop_toTopOf="@id/tv_order_date" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>